{
  "name": "reall",
  "author": "AfxLab",
  "version": "0.1.0",
  "description": "Real Esate Manager & Services",
  "main": "dist/electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/absolute-fx/Reall.git"
  },
  "scripts": {
    "build": "node .electron-react/build.js && electron-builder",
    "dev": "node .electron-react/dev-runner.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "webpack --config webpack.common.js --watch",
    "start": "electron .",
    "pack": "webpack --config webpack.common.js --build && electron-builder --dir",
    "dist": "electron-builder build"
  },
  "build": {
    "appId": "com.absolutefx.reall",
    "productName": "Reall",
    "copyright": "@ 2020 Absolute-fx. Tous droits réservés.",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*",
      "dist/fonts/**/*",
      "dist/vendor/**/*",
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/locales/lang",
        "to": "dist/electron/lang",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/styles/font-awesome",
        "to": "dist/vendor/font-awesome",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/styles/webfonts",
        "to": "dist/vendor/webfonts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://cdn-iclauncher.iola-cloud.com/reall/"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "artifactName": "${productName}.${ext}",
      "uninstallDisplayName": "Désinstaller Reall",
      "installerHeaderIcon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 345,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 125,
          "y": 150,
          "type": "file"
        }
      ]
    }
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "axios": "^0.21.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^7.1.4",
    "bootstrap": "^4.5.3",
    "cfonts": "^2.9.1",
    "copy-webpack-plugin": "^8.1.0",
    "css-loader": "^3.6.0",
    "edit-json-file": "^1.5.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-debug": "^3.2.0",
    "electron-log": "^4.3.2",
    "electron-packager": "^15.2.0",
    "electron-promise-ipc": "^2.2.1",
    "electron-reload": "^1.5.0",
    "electron-updater": "^4.3.5",
    "file-loader": "^6.1.1",
    "google-map-react": "^2.1.9",
    "html-webpack-plugin": "^3.2.0",
    "jquery": "^3.5.1",
    "listr": "^0.14.3",
    "mini-css-extract-plugin": "^1.3.9",
    "moment": "^2.29.1",
    "react": "^17.0.0",
    "react-bootstrap": "^1.4.0",
    "react-dom": "^17.0.0",
    "react-multi-lang": "^2.1.1",
    "react-router-dom": "^5.2.0",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "style-loader": "^2.0.0",
    "ttf-loader": "^1.0.2",
    "ttf2woff": "^2.0.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.25.0"
  }
}
